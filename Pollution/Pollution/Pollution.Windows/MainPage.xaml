    	</Grid>
    	<Grid x:Name="DataPanel" Background="#FFA85555" Margin="0,0,0,5000" Grid.Row="1" Grid.RowSpan="5" Grid.ColumnSpan="11" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
    	<Grid x:Name="MenuPanel" Background="#FFF32C2C" Margin="0,5000,0,0" Grid.RowSpan="5" Grid.ColumnSpan="11"/>
    	<Grid x:Name="MapPanel" Background="#FF513333" Grid.RowSpan="6" Grid.ColumnSpan="8" Margin="5000,0,0,0"/>
