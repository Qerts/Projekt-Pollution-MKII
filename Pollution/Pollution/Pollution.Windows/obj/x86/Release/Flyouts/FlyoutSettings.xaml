<SettingsFlyout x:Name="settingsFlyout"
    x:Uid="FlyoutSettings"
    x:Class="Pollution.Flyouts.FlyoutSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pollution.Flyouts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"     
    IconSource="Assets/SmallLogo.png"
    Title="Nastavení"
    d:DesignWidth="346" ScrollViewer.VerticalScrollBarVisibility="Disabled">

    <!-- This StackPanel acts as a root panel for vertical layout of the content sections -->
    
    <Grid x:Name="ContentPanel" MaxHeight="{Binding ActualHeight, ElementName=settingsFlyout}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<StackPanel Margin="0">
    		<TextBlock TextWrapping="Wrap" Text="Design text" x:Uid="TextCurrentStation" FontWeight="Bold" FontSize="18.667" Margin="0" VerticalAlignment="Top"/>
			<CheckBox x:ConnectionId='4' x:Name="checkNearest" x:Uid="CheckNearest" Content="Design text"                                                                  VerticalAlignment="Top" FontSize="13.333" />
			<CheckBox x:ConnectionId='5' x:Name="checkNearestWithoutQuality"  x:Uid="CheckNearestWithoutQuality"  Content="Design text"                                                                                             FontSize="13.333" VerticalAlignment="Top" />
			<TextBlock TextWrapping="Wrap"  x:Uid="SelectStation"  Text="Design text" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="13.333" Margin="15,20,0,0"/>
    	</StackPanel>
		<ListBox x:ConnectionId='1' x:Name="listStations"                                              Background="{x:Null}" FontSize="13.333" Margin="15,0,0,0" Grid.Row="1">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel>
						<TextBlock TextWrapping="Wrap" Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
						<TextBlock TextWrapping="Wrap" Text="{Binding Description}" FontSize="10" Margin="0,0,0,10" Foreground="Gray"/>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<StackPanel Margin="0" Grid.Row="2">
			<TextBlock TextWrapping="Wrap"  x:Uid="TextAppSetting"  Text="Design text" FontWeight="Bold" FontSize="18.667" VerticalAlignment="Top" Margin="0,30,0,0"/>
			<CheckBox x:ConnectionId='2' x:Name="checkLiveTile"  x:Uid="CheckLiveTile"  Content="Design text"                                                                   VerticalAlignment="Top" FontSize="13.333" />
			<TextBlock TextWrapping="Wrap"  x:Uid="TextLiveTile" Text="Design text" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="13.333" Margin="15,0,0,0"/>
			<TextBlock TextWrapping="Wrap"  x:Uid="TextLanguage"  Text="Design text" FontSize="18.667" FontWeight="Bold" Height="39"/>
			<ComboBox x:ConnectionId='3' x:Name="listLang"                                              Margin="10,0" Height="48">
					<!--<ComboBoxItem  x:Uid="TextLanguageSystem"  Content="Design text"/>-->
				<ComboBoxItem Content="čeština"/>
				<ComboBoxItem Content="english"/>
			</ComboBox>
			<TextBlock TextWrapping="Wrap" x:Uid="TextLanguageInfo" Text="" VerticalAlignment="Top" FontSize="13.333" Margin="15,0,0,50"/>
		</StackPanel>

		<!-- This StackPanel acts as a root panel for vertical layout of the content sections -->
    
	</Grid>
    
</SettingsFlyout>

